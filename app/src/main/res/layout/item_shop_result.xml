<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="270pt"
        android:layout_height="375pt"
        android:layout_marginLeft="25pt"
        android:layout_marginRight="25pt"
        android:layout_marginTop="40pt"
        android:layout_marginBottom="40pt"
        android:background="@mipmap/ic_shop_bg_white">

        <TextView
            android:id="@+id/plu"
            android:layout_width="wrap_content"
            android:layout_height="36pt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41pt"
            android:background="@drawable/shape_stroke_2d_10"
            android:gravity="center"
            android:paddingLeft="15pt"
            android:paddingRight="15pt"
            android:text="编号：0001"
            android:textColor="#2DBD9B"
            android:textSize="20pt" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4pt"
            android:text="本地西红柿"
            android:textColor="#0B0B0B"
            android:textSize="26pt" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4pt"
            android:text="5.88元/kg"
            android:textColor="#E34550"
            android:textSize="22pt" />
        
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="180pt"
            android:layout_height="150pt"
            android:src="@mipmap/yoyo11"
            android:layout_below="@+id/price"
            android:layout_marginTop="30pt"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/ivNum"
        android:layout_width="100pt"
        android:layout_height="100pt"
        android:src="@mipmap/ic_one" />
</RelativeLayout>