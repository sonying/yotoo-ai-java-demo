<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/color_border_grey"
    android:orientation="vertical"
    android:paddingStart="100dp"
    android:paddingTop="20dp"
    android:paddingRight="100dp"
    android:paddingBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_point"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_left_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左上角"
                    android:textColor="@color/color_txt_label"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_lt_x"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="x值"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_lt_y"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="y值"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9"
                    android:textSize="24sp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_right_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_left_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="右上角"
                    android:textColor="@color/color_txt_label"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_rt_x"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="x值"
                    android:textSize="24sp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_rt_y"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="y值"
                    android:textSize="24sp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_right_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_right_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="左下角"
                    android:textColor="@color/color_txt_label"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_rb_x"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="x值"
                    android:textSize="24sp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_rb_y"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="y值"
                    android:textSize="24sp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_left_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_right_bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="右下角"
                    android:textColor="@color/color_txt_label"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_lb_x"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="x值"
                    android:textSize="24sp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_lb_y"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="y值"
                    android:textSize="24sp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cl_shop_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店名称:"
                    android:textColor="@color/color_txt_label"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="门店名称"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9"
                    android:textSize="24sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/ll_name"
                app:layout_constraintStart_toStartOf="@id/ll_name"
                app:layout_constraintTop_toBottomOf="@id/ll_name">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联  系  人:"
                    android:textColor="@color/color_txt_label"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_person"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="门店联系人"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9"
                    android:textSize="24sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/ll_name"
                app:layout_constraintStart_toStartOf="@id/ll_name"
                app:layout_constraintTop_toBottomOf="@id/ll_person">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式:"
                    android:textColor="@color/color_txt_label"

                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_phone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="联系方式"
                    android:inputType="phone"
                    android:textColor="@color/color_txt_label"
                    android:textColorHint="@color/color_f9"
                    android:textSize="24sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_bg_2d_8"
        android:text="确定"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl" />
</LinearLayout>